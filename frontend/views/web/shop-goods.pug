extends ../app

block variables
  -
    const pageTitle = `Товари`;

block content
  .page.shop-goods
    .back
      a.btn.btn-dark(href='/shops') Назад

    table.table-bordered
      tr
        th.id #
        th.title Заголовок
        th.description Опис
        th.price Ціна
        th.attributes Атрибути
        th.text Повний опис
        th.link Посилання
        th.images Зображення

      each good, index in goods
        tr(id= `good_${good._id}`)
          td #{index + 1}

          td
            input.form-control.full-height(type='text', value= good.title)

          td
            textarea.form-control.full-height #{good.description}

          td
            input.price.form-control.full-height(type='text', value= good.price)

          td
            textarea.form-control.full-height #{good.attributes}

          td
            p.tex.full-heightt #{good.text}

          td
            a.btn.btn-primary(href= `https://www.instagram.com/p/${good.link}`, target='_blank') Перейти

          td
            each src of good.images
              img(src= src)

block scripts
  script(src='/javascripts/web/shops.script.js')
  